<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/content_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:context="com.example.andrew.ufafarfor13.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:padding="4dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/sets"
                android:layout_column="0"
                android:src="@drawable/sets"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/rolls"
                android:layout_column="2"
                android:src="@drawable/rolls"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/susi"
                android:layout_column="3"
                android:src="@drawable/susi"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="СЕТЫ"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_weight="1"
                android:visibility="visible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="РОЛЛЫ"
                android:id="@+id/textView2"
                android:layout_column="2"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="СУШИ"
                android:id="@+id/textView3"
                android:layout_column="3"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/adds"
                android:layout_column="0"
                android:src="@drawable/adds"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="80dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/snacks"
                android:layout_column="2"
                android:src="@drawable/snacks"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/deserts"
                android:layout_column="3"
                android:src="@drawable/deserts"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ДОБАВКИ"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ЗАКУСКИ"
                android:id="@+id/textView5"
                android:layout_column="2"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ДЕСЕРТЫ"
                android:id="@+id/textView6"
                android:layout_column="3"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/drinks"
                android:layout_column="0"
                android:src="@drawable/drinks"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/pizza"
                android:layout_column="2"
                android:src="@drawable/pizza"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/shashly"
                android:layout_column="3"
                android:src="@drawable/shashly"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="НАПИТКИ"
                android:id="@+id/textView7"
                android:layout_column="0"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ПИЦЦА"
                android:id="@+id/textView8"
                android:layout_column="2"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ШАШЛЫКИ"
                android:id="@+id/textView9"
                android:layout_column="3"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/patymaker"
                android:layout_column="0"
                android:layout_weight="1"
                android:src="@drawable/patymaker"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/lapsha"
                android:layout_column="2"
                android:layout_weight="1"
                android:src="@drawable/lapsha" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/soup"
                android:layout_column="3"
                android:layout_weight="1"
                android:src="@drawable/soup" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ПАТИМЕЙКЕР"
                android:id="@+id/textView10"
                android:layout_column="0"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ЛАПША"
                android:id="@+id/textView11"
                android:layout_column="2"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="СУПЫ"
                android:id="@+id/textView12"
                android:layout_column="3"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/salat"
                android:layout_column="0"
                android:src="@drawable/salat"
                android:layout_weight="0.33"
                android:layout_width="150dp"
                android:layout_height="80dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/warm"
                android:layout_column="2"
                android:src="@drawable/warm"
                android:layout_weight="0.33" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="САЛАТЫ"
                android:id="@+id/textView13"
                android:layout_column="0"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ТЁПЛОЕ"
                android:id="@+id/textView14"
                android:layout_column="2"
                android:layout_weight="1"
                />

        </TableRow>
    </TableLayout>


</RelativeLayout>
